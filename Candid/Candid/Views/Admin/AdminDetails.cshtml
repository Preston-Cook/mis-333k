@model AppUser;

@{
    ViewData["Title"] = "Candid | Admin Details";
    String FirstName = Model.FirstName;
    String LastName = Model.LastName;
    String FormattedDateJoined = Model.DateCreated.ToString("MMMM dd, yyyy");
    String AdminId = Model.Id;
    String FormattedStatus = Model.IsActive ? "Active" : "Deactivated";
}

<div class="container">
    <h1>Admin Details</h1>
    <h5>First Name: @FirstName</h5>
    <h5>Last Name: @LastName</h5>
    <h5>Date Created: @FormattedDateJoined</h5>
    <h5>User Status: @FormattedStatus</h5>
    <a asp-action="EditAdmin" asp-controller="Admin" asp-route-id="@AdminId">
        <button class="btn btn-primary">Edit Admin</button>
    </a>
    <br>
    <form asp-action="DeactivateAdmin" asp-controller="Admin" method="POST">
        <input type="hidden" name="Id" value="@AdminId">
        <br>
        @{
            if (Model.IsActive)
            {
                <button class="btn btn-primary" type="submit">Deactivate Admin</button>
            }
            else
            {
                <button class="btn btn-primary" type="submit">Activate Admin</button>
            }
        }
    </form>
</div>
