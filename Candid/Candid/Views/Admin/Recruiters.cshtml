@model IEnumerable<Candid.Models.AppUser>

@{
    ViewData["Title"] = "Candid | Recruiter Details";
}
<div class="container">
    <h1>Recruiters</h1>
<a class="btn btn-primary" asp-action="CreateRecruiter" asp-controller="Admin">Create Recruiter</a>
<table class="table">
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Company</th>
        <th>User Status</th>
        <th>Details</th>
    </tr>
    <tbody>
        @{
            foreach(var item in Model)
            {
                String FirstName = item.FirstName;
                String LastName = item.LastName;
                String Email = item.Email;
                String CompanyName =  item.Company.CompanyName;
                String FormattedStatus = item.IsActive ? "Active" : "Deactivated"; 
                {
                    <tr>
                        <td>@FirstName</td>
                        <td>@LastName</td>
                        <td>@Email</td>
                        <td>@CompanyName</td>
                        <td>@FormattedStatus</td>
                    <td>
                        <a asp-action="RecruiterDetails" asp-controller="Admin" asp-route-id="@item.Id">
                            Details
                        </a>
                    </td>
                </tr>
                }
            }
        }
    </tbody>
</table>


</div>