@model Candid.Models.AdminViewModel

@{
    ViewData["Title"] = "Candid | Edit Profile";
}

<div class="container">
    <h1>Edit Profile</h1>
    <form asp-action="EditProfile" asp-controller="Admin" method="POST">
        <div class="alert alert-danger" asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="FirstName" class="control-label"></label>
            <input asp-for="FirstName" class="form-control"/>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName" class="control-label"></label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <br>
        <button type="submit" class="btn btn-primary">Submit Edits</button>
    </form>
</div>